generator client {
  binaryTargets = ["windows"]
  provider      = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  cognitoId String?  @unique
  email     String   @unique
  phone     Phone
  name      Name
  country   Country?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

type Phone {
  country  String
  areaCode Int
  number   Int
}

type Name {
  first String
  last  String
}

enum Country {
  USA
  CAN
  BRA
  GER
  FRA
}
